# Core Configuration
GOOGLE_GENERATIVE_AI_API_KEY=your_gemini_api_key_here
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Optional Real APIs
OPENWEATHER_API_KEY=your_openweather_api_key_here
GEOAPIFY_API_KEY=your_geoapify_api_key_here

# Amadeus API for flights and hotels
AMADEUS_API_KEY=your_amadeus_api_key_here
AMADEUS_API_SECRET=your_amadeus_api_secret_here

# Google reCAPTCHA Keys (for bot protection)
# Get from: https://www.google.com/recaptcha/admin
NEXT_PUBLIC_GOOGLE_RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here
GOOGLE_RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here

# Development
NODE_ENV=development
NEXT_PUBLIC_SHOW_AI_DEBUG=false
NEXT_PUBLIC_SHOW_SECURITY_DEBUG=false